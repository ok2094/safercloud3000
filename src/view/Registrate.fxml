<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegistrateController">
   <top>
      <Label text="Registrieren" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding></Label>
   </top>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="10.0">
               <children>
                  <VBox spacing="20.0">
                     <children>
                        <Label text="Benutzername:" />
                        <Label text="Passwort:" />
                        <Label text="Pfad zu Schlüssel" />
                     </children>
                  </VBox>
                  <VBox spacing="10.0">
                     <children>
                        <TextField fx:id="userName" />
                        <PasswordField fx:id="password" />
                        <TextField fx:id="pathForKey" maxHeight="-Infinity" maxWidth="-Infinity" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="saveKey" mnemonicParsing="false" onAction="#saveKeyAction" text="Schlüssel speichern" />
            <Button fx:id="send" mnemonicParsing="false" onAction="#sendAction" text="Senden" />
         </children>
      </VBox>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
