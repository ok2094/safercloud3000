<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginController">
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="10.0">
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Benutzername:" />
                        <Label text="Passwort:" />
                     </children>
                  </VBox>
                  <VBox spacing="10.0">
                     <children>
                        <TextField fx:id="userName" />
                        <PasswordField fx:id="password" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="login" mnemonicParsing="false" onAction="#loginAction" text="Anmelden" />
            <Button fx:id="callRegistrate" mnemonicParsing="false" onAction="#callRegistrateAction" text="Registrieren">
               <font>
                  <Font size="9.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
   <top>
      <Label text="Wilkommen!" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </Label>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
